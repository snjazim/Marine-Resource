<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ninja.ibtehaz.fishersmarket.Main2Activity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/awareness_linear_layout"
        android:padding="10dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello :) "
            android:textColor="#000"
            android:textSize="20dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_awareness"/>

        <ExpandableListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListView"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/market_login"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.0"
        android:background="#ABCDEF"
        android:padding="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/mobile_login"
            android:gravity="center"
            android:hint="Mobile Number"
            android:background="#fff"
            android:textColor="#000"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/password_login"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:password="true"
            android:background="#fff"
            android:textColor="#000"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/login_login"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:background="#097907"
            android:textColor="#fff"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/newAccount_login"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Create a new account"
            android:background="@color/colorAccent"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/market_newAccount"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.0"
        android:background="#ABCDEF"
        android:padding="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/mobile_newAccount"
            android:gravity="center"
            android:hint="Mobile Number"
            android:background="#fff"
            android:textColor="#000"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/password_newAccount"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:password="true"
            android:background="#fff"
            android:textColor="#000"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/password_confirm_newAccount"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:password="true"
            android:background="#fff"
            android:textColor="#000"
            />


        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radio_newAccount"
                android:layout_marginTop="20dp"
                android:text="Are you a buyer?"
                android:textSize="20dp"
                android:textColor="#000"
                />

        </RadioGroup>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Create_newAccount"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Create new Account"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Login_newAccount"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:background="#097907"
            android:textColor="#fff"/>

        </LinearLayout>

</LinearLayout>
